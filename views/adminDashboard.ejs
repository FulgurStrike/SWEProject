<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/output.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <% if (errorMessages.length) { %>
    <% errorMessages.forEach(msg => { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= msg %>
      </div>
    <% }) %>
  <% } %>
  
  <% if (successMessages.length) { %>
    <% successMessages.forEach(msg => { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <%= msg %>
      </div>
    <% }) %>
  <% } %>

  <!-- Navbar -->
  <nav class="bg-blue-600 text-white p-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div class="text-xl font-bold">Admin Dashboard</div>
      <ul class="flex space-x-6">
        <li><a href="/" class="hover:text-gray-300">Home</a></li>
        <li><a href="/logout" class="hover:text-gray-300">Logout</a></li>
      </ul>
    </div>
  </nav>

     <!-- Main Section -->
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 p-8">

    <!-- Left: Booking Requests List -->
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-blue-600">Booking Requests</h2>
      <ul class="space-y-4 overflow-y-auto max-h-[400px]">
    
          <li class="border border-gray-300 p-4 rounded-md hover:bg-gray-100 cursor-pointer" onclick="selectRequest(1)">
            <p><strong>Name:</strong> booking name</p>
            <p><strong>From:</strong> booking from</p>
            <p><strong>To:</strong> booking to</p>
            <p><strong>Vehicle:</strong> booking reg</p>
          </li>
        
      </ul>
    </div>

    <!-- Right: Selected Booking Details -->
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-blue-600">Selected Request</h2>
      <div id="selectedRequest" class="text-gray-700 space-y-3">
        <p>Select a request from the left to view details.</p>
      </div>
      <div class="mt-6 flex space-x-4">
        <form action="/admin/accept" method="POST">
          <input type="hidden" id="acceptId" name="id" />
          <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">Accept</button>
        </form>
        <form action="/admin/reject" method="POST">
          <input type="hidden" id="rejectId" name="id" />
          <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700">Reject</button>
        </form>
      </div>
    </div>
  </div>

    <!-- Contact Messages Section -->
        <div class="max-w-7xl mx-auto mt-8 bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold mb-4 text-blue-600">Contact Messages</h2>
            <ul class="space-y-4">
                <% if (messages.length === 0) { %>
                    <li class="text-gray-500">No messages found.</li>
                  <% } else { %>
                    <% messages.forEach(function(Message) {
                      if (Message.senderEmail && Message.senderMessage){ %>
                      <li class="border border-gray-300 p-4 rounded-md">
                        <p><strong>Email:</strong> <%= Message.senderEmail %></p>
                        <p><strong>Message:</strong> <%= Message.senderMessage %></p>
                      </li>
                    <% }}) %>
                  <% } %>
              </ul>
          </div>
    </body>
</html> 