<!DOCTYPE html>
<html>
  <head>
    <meta lang="en-GB">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width", initial-scale="1">
    <link rel="stylesheet" href="/output.css">
    <title><%= title || 'Login Page' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="font-sans bg-gray-50">

    <!-- Navbar -->
  <nav class="bg-blue-600 text-white p-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div class="text-xl"><%= siteName || 'placeholder' %></div>
      <ul class="flex space-x-6">
        <li><a href="/" class="hover:text-gray-300"><%=home %></a></li>
        <li><a href="/help" class="hover:text-gray-300"><%=help %></a></li>
        <li><a href="/login" class="hover:text-gray-300 font-bold underline"><%=login %></a></li>
        <li><a href="/signup" class="hover:text-gray-300"><%=signUp %></a></li>
        <li><a href="/logout" class="hover:text-gray-300"><%=logout %></a></li>
      </ul>
    </div>
  </nav>

  <!-- SignUp Form Section -->
  <section class="py-16 bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6"><%=login%></h2>
        <form action="/login" method="POST">

            <div class="mb-4">
              <label for="email" class="block text-sm font-medium text-gray-600"><%=email%></label>
              <input type="email" id="email" name="email" class="w-full p-3 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="someone@example.com" value="" required>
            </div>
      
            <div class="mb-4">
                <label for="password" class="block text-sm font-medium text-gray-600"><%=password%></label>
                <input type="password" id="password" name="password" class="w-full p-3 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Password" required>
            </div>
                
            <button type="submit" class="w-full bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500">Log in</button>
            <p class="block text-sm font-medium text-red-600"><%=invalidCredentials %></p>

            <div class="mt-4 text-center">
                <p class="text-sm text-gray-600">
                    <%=dontHaveAccount%>
                    <a href="/signup" class="text-blue-600 hover:text-blue-500 font-medium"><%=register%></a>     
                </p>
            </div>

        </form>
    </div>
  </section>


    <!-- Footer -->
    <footer class="bg-blue-600 text-white py-6">
      <div class="max-w-7xl mx-auto text-center">
        <p>&copy; <%= footerText %></p>
      </div>
    </footer>


</html>
